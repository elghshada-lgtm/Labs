savingAccount.cpp :
//
// Shada E. CISC 192
//

#include "savingAccount.h"
#include <iostream>
using namespace std;

// Default constructor
savingAccount::savingAccount() {
    interestRate = 0;
}

// Parameterized constructor
savingAccount::savingAccount(int accountNumber, double balance, double interestRate)
    : bankAccount(accountNumber, balance)
{
    this->interestRate = interestRate;
}

// Setter
void savingAccount::setInterestRate(double interestRate) {
    this->interestRate = interestRate;
}

// Getter
double savingAccount::getInterestRate() const {
    return interestRate;
}

// Add interest to balance
void savingAccount::postInterest() {
    double interest = getAccountBalance() * (interestRate / 100.0);
    deposit(interest);
}

// Override withdraw
void savingAccount::withdraw(double amount) {
    if (amount <= getAccountBalance()) {
        bankAccount::withdraw(amount);   // call parent version
    }
    else {
        cout << "Insufficient funds â€” withdrawal denied.\n";
    }
}

// Override print
void savingAccount::print() const {
    cout << "====== Savings Account Info ======\n";
    cout << "Account Number: " << getAccountNumber() << endl;
    cout << "Balance: $" << getAccountBalance() << endl;
    cout << "Interest Rate: " << interestRate << "%\n";
    cout << "==================================\n";
}







savingAccount.h :

//
// Shada E. CISC 192
//

#pragma once
#include "bankAccount.h"

class savingAccount : public bankAccount {
private:
    double interestRate = 0;

public:
    void setInterestRate(double interestRate);
    double getInterestRate() const;
    void postInterest();
    void withdraw(double amount);   // override
    void print() const;             // override

    savingAccount();
    savingAccount(int accountNumber, double balance, double interestRate);
};




