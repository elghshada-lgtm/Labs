
#pragma once
#include "bankAccount.h"

class savingsAccount : public bankAccount {
private:
    double interestRate = 0;

public:
    void setInterestRate(double interestRate);
    double getInterestRate() const;
    void postInterest();
    void withdraw(double amount);   // override
    void print() const;             // override

    savingsAccount();
    savingsAccount(int accountNumber, double balance, double interestRate);
};









#include "savingAccount.h"
#include <iostream>
using namespace std;

// Default constructor
savingsAccount::savingsAccount() : bankAccount() {
    interestRate = 0;
}

// Parameterized constructor
savingsAccount::savingsAccount(int accountNumber, double balance, double interestRate)
    : bankAccount(accountNumber, balance)
{
    this->interestRate = interestRate;
}

// Setter
void savingsAccount::setInterestRate(double interestRate) {
    this->interestRate = interestRate;
}

// Getter
double savingsAccount::getInterestRate() const {
    return interestRate;
}

// Add interest to balance
void savingsAccount::postInterest() {
    double interest = getAccountBalance() * (interestRate / 100.0);
    deposit(interest);
}

// Override withdraw
void savingsAccount::withdraw(double amount) {
    if (amount <= getAccountBalance()) {
        bankAccount::withdraw(amount);   // call parent version
    }
    else {
        cout << "Insufficient funds â€” withdrawal denied.\n";
    }
}

// Override print
void savingsAccount::print() const {
    cout << "====== Savings Account Info ======\n";
    cout << "Account Number: " << getAccountNumber() << endl;
    cout << "Balance: $" << getAccountBalance() << endl;
    cout << "Interest Rate: " << interestRate << "%\n";
    cout << "==================================\n";
}





